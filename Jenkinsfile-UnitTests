pipeline {
    agent any

    tools {
        maven 'Maven-3.9'
        jdk 'JDK-17'
    }

    environment {
        SLACK_CHANNEL = '#jenkins-notifications'
        SLACK_TOKEN = credentials('slack-token')
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timeout(time: 20, unit: 'MINUTES')
    }

    parameters {
        choice(
            name: 'TEST_SCOPE',
            choices: ['ALL_TESTS', 'USER_SERVICE_ONLY', 'SPECIFIC_TEST'],
            description: 'Alcance de las pruebas a ejecutar'
        )
        string(
            name: 'SPECIFIC_TEST_CLASS',
            defaultValue: 'UserServiceImplTest',
            description: 'Clase de prueba especÃ­fica (solo si TEST_SCOPE = SPECIFIC_TEST)'
        )
    }

    stages {
        stage('Checkout') {
            steps {
                echo '========================================='
                echo 'ğŸ“¦ CHECKOUT DEL CÃ“DIGO FUENTE'
                echo '========================================='
                checkout scm
                script {
                    echo "Branch: ${env.GIT_BRANCH}"
                    echo "Commit: ${env.GIT_COMMIT}"
                }
            }
        }

        stage('Environment Info') {
            steps {
                echo '========================================='
                echo 'ğŸ”§ INFORMACIÃ“N DEL AMBIENTE'
                echo '========================================='
                sh '''
                    echo "Java Version:"
                    java -version
                    echo ""
                    echo "Maven Version:"
                    mvn -version
                    echo ""
                    echo "Workspace: ${WORKSPACE}"
                '''
            }
        }

        stage('Compile') {
            steps {
                echo '========================================='
                echo 'ğŸ”¨ COMPILANDO PROYECTO'
                echo '========================================='
                sh 'mvn clean compile -DskipTests'
            }
        }

        stage('Run Unit Tests') {
            steps {
                script {
                    echo '========================================='
                    echo 'ğŸ§ª EJECUTANDO PRUEBAS UNITARIAS'
                    echo '========================================='

                    if (params.TEST_SCOPE == 'ALL_TESTS') {
                        echo 'ğŸ“Š Ejecutando TODAS las pruebas del proyecto...'
                        sh 'mvn test'
                    } else if (params.TEST_SCOPE == 'USER_SERVICE_ONLY') {
                        echo 'ğŸ“Š Ejecutando pruebas de UserServiceImplTest...'
                        sh 'mvn test -Dtest=UserServiceImplTest'
                    } else if (params.TEST_SCOPE == 'SPECIFIC_TEST') {
                        echo "ğŸ“Š Ejecutando pruebas de ${params.SPECIFIC_TEST_CLASS}..."
                        sh "mvn test -Dtest=${params.SPECIFIC_TEST_CLASS}"
                    }
                }
            }
        }

        stage('Display Test Results') {
            steps {
                echo '========================================='
                echo 'ğŸ“‹ RESULTADOS DE LAS PRUEBAS'
                echo '========================================='
                script {
                    sh '''
                        echo "ğŸ“Š Resumen de Pruebas Ejecutadas:"
                        echo "=================================="

                        if [ -d "target/surefire-reports" ]; then
                            # Buscar archivos XML de resultados
                            TOTAL_TESTS=$(grep -r 'tests=' target/surefire-reports/*.xml | head -1 | sed 's/.*tests="\\([0-9]*\\)".*/\\1/')
                            FAILURES=$(grep -r 'failures=' target/surefire-reports/*.xml | head -1 | sed 's/.*failures="\\([0-9]*\\)".*/\\1/')
                            ERRORS=$(grep -r 'errors=' target/surefire-reports/*.xml | head -1 | sed 's/.*errors="\\([0-9]*\\)".*/\\1/')
                            SKIPPED=$(grep -r 'skipped=' target/surefire-reports/*.xml | head -1 | sed 's/.*skipped="\\([0-9]*\\)".*/\\1/')

                            echo "âœ… Total de pruebas: ${TOTAL_TESTS:-0}"
                            echo "âŒ Fallidas: ${FAILURES:-0}"
                            echo "âš ï¸  Errores: ${ERRORS:-0}"
                            echo "â­ï¸  Omitidas: ${SKIPPED:-0}"
                            echo ""

                            # Mostrar archivos de reporte generados
                            echo "ğŸ“„ Reportes generados:"
                            ls -lh target/surefire-reports/*.xml | awk '{print "   " $9 " - " $5}'
                        else
                            echo "âš ï¸  No se encontraron reportes de pruebas"
                        fi
                    '''
                }
            }
        }

        stage('Code Coverage Report') {
            steps {
                echo '========================================='
                echo 'ğŸ“Š GENERANDO REPORTE DE COBERTURA'
                echo '========================================='
                sh 'mvn jacoco:report'

                script {
                    sh '''
                        if [ -f "target/site/jacoco/index.html" ]; then
                            echo "âœ… Reporte de cobertura generado exitosamente"
                            echo "ğŸ“‚ UbicaciÃ³n: target/site/jacoco/index.html"

                            # Extraer porcentaje de cobertura si estÃ¡ disponible
                            if [ -f "target/site/jacoco/jacoco.csv" ]; then
                                echo ""
                                echo "ğŸ“ˆ MÃ©tricas de Cobertura:"
                                head -2 target/site/jacoco/jacoco.csv
                            fi
                        else
                            echo "âš ï¸  No se pudo generar el reporte de cobertura"
                        fi
                    '''
                }
            }
        }

        stage('Publish Test Reports') {
            steps {
                echo '========================================='
                echo 'ğŸ“¤ PUBLICANDO REPORTES'
                echo '========================================='

                // Publicar resultados de JUnit
                junit(
                    testResults: '**/target/surefire-reports/*.xml',
                    allowEmptyResults: false,
                    healthScaleFactor: 1.0
                )

                // Publicar reporte de JaCoCo
                jacoco(
                    execPattern: '**/target/jacoco.exec',
                    classPattern: '**/target/classes',
                    sourcePattern: '**/src/main/java',
                    exclusionPattern: '**/config/**,**/dto/**,**/exception/**,**/enums/**',
                    minimumInstructionCoverage: '50',
                    minimumBranchCoverage: '40',
                    minimumComplexityCoverage: '40',
                    minimumLineCoverage: '50',
                    minimumMethodCoverage: '50',
                    minimumClassCoverage: '50'
                )
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo '========================================='
                echo 'ğŸ“¦ ARCHIVANDO ARTEFACTOS'
                echo '========================================='

                archiveArtifacts(
                    artifacts: '**/target/surefire-reports/**/*.*,**/target/site/jacoco/**/*.*',
                    allowEmptyArchive: true,
                    fingerprint: true
                )
            }
        }
    }

    post {
        always {
            echo '========================================='
            echo 'ğŸ§¹ LIMPIEZA POST-BUILD'
            echo '========================================='
            echo 'âœ… Pipeline ejecutado completamente'
        }

        success {
            echo 'âœ…âœ…âœ… PIPELINE EXITOSO âœ…âœ…âœ…'
            echo 'Todas las pruebas unitarias pasaron correctamente!'

            script {
                def buildDuration = currentBuild.durationString.replace(' and counting', '')
                echo """
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                    âœ… BUILD SUCCESS
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                Proyecto: ${env.JOB_NAME}
                Build: #${env.BUILD_NUMBER}
                DuraciÃ³n: ${buildDuration}
                Alcance: ${params.TEST_SCOPE}
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                """

                // NotificaciÃ³n a Slack
                def testResultAction = currentBuild.rawBuild.getAction(hudson.tasks.junit.TestResultAction.class)
                def totalTests = testResultAction ? testResultAction.totalCount : 'N/A'
                def passedTests = testResultAction ? testResultAction.passCount : 'N/A'

                slackSend(
                    channel: env.SLACK_CHANNEL,
                    color: 'good',
                    message: """
âœ… *BUILD EXITOSO* - ${env.JOB_NAME}

*Build:* #${env.BUILD_NUMBER}
*DuraciÃ³n:* ${buildDuration}
*Alcance:* ${params.TEST_SCOPE}
*Tests Ejecutados:* ${totalTests}
*Tests Exitosos:* ${passedTests}

<${env.BUILD_URL}|Ver detalles del build>
<${env.BUILD_URL}testReport|Ver reporte de tests>
<${env.BUILD_URL}jacoco|Ver cobertura de cÃ³digo>
                    """.trim(),
                    tokenCredentialId: 'slack-token'
                )
            }
        }

        unstable {
            echo 'âš ï¸âš ï¸âš ï¸ BUILD INESTABLE âš ï¸âš ï¸âš ï¸'
            echo 'Algunas pruebas fallaron pero el build continuÃ³.'

            script {
                def buildDuration = currentBuild.durationString.replace(' and counting', '')
                def testResultAction = currentBuild.rawBuild.getAction(hudson.tasks.junit.TestResultAction.class)
                def totalTests = testResultAction ? testResultAction.totalCount : 'N/A'
                def failedTests = testResultAction ? testResultAction.failCount : 'N/A'

                slackSend(
                    channel: env.SLACK_CHANNEL,
                    color: 'warning',
                    message: """
âš ï¸ *BUILD INESTABLE* - ${env.JOB_NAME}

*Build:* #${env.BUILD_NUMBER}
*DuraciÃ³n:* ${buildDuration}
*Alcance:* ${params.TEST_SCOPE}
*Tests Totales:* ${totalTests}
*Tests Fallidos:* ${failedTests}

<${env.BUILD_URL}|Ver detalles del build>
<${env.BUILD_URL}testReport|Ver tests fallidos>
                    """.trim(),
                    tokenCredentialId: 'slack-token'
                )
            }
        }

        failure {
            echo 'âŒâŒâŒ BUILD FALLIDO âŒâŒâŒ'
            echo 'El pipeline fallÃ³. Revisar los logs para mÃ¡s detalles.'

            script {
                def buildDuration = currentBuild.durationString.replace(' and counting', '')
                echo """
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                    âŒ BUILD FAILURE
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                Proyecto: ${env.JOB_NAME}
                Build: #${env.BUILD_NUMBER}
                DuraciÃ³n: ${buildDuration}
                Alcance: ${params.TEST_SCOPE}
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                """

                // NotificaciÃ³n a Slack
                slackSend(
                    channel: env.SLACK_CHANNEL,
                    color: 'danger',
                    message: """
âŒ *BUILD FALLIDO* - ${env.JOB_NAME}

*Build:* #${env.BUILD_NUMBER}
*DuraciÃ³n:* ${buildDuration}
*Alcance:* ${params.TEST_SCOPE}
*Estado:* FAILURE

*Posibles causas:*
â€¢ Error de compilaciÃ³n
â€¢ Fallos en pruebas unitarias
â€¢ Error en la configuraciÃ³n

<${env.BUILD_URL}console|Ver logs completos>
<${env.BUILD_URL}testReport|Ver reporte de tests>
                    """.trim(),
                    tokenCredentialId: 'slack-token'
                )
            }
        }

        cleanup {
            echo 'Limpiando workspace temporal...'
            // cleanWs() // Descomentar si quieres limpiar el workspace
        }
    }
}
